@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello, @Html.Encode(User?.Identity?.Name)</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="users">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">
                Login/Register
            </a>
        </li>
    }
</ul>
